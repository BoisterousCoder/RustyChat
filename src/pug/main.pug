doctype html
html
	head
		title Rusty Chat
		script(src="/static/libs/socketio.js") 
		script(src="https://unpkg.com/webnative@latest/dist/index.umd.min.js") 
		link(href="/static/libs/switch.css" rel="stylesheet")
		link(href="/static/css/style.css" rel="stylesheet")
		script(src="/static/js/login.js" type="module")
		script(src="/static/js/start.js" type="module") 
	body
		#header
			span#name
			button#allowTrust.normButton Allow Trusting
			form#groupForm(action="")
				input#groupInput(type="text" autocomplete="off" value="Default")
				button.normButton go
		ul#messages
		form#msgForm(action="")
			label.switch(for="isEncrypting")
				input#isEncrypting(type="checkbox") 
				span.slider.round
			input#msgInput(type="text" autocomplete="off")
			button.normButton send
